generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum RoleType {
  ADMIN
  USER
  USER_FORMADOR
  USER_MENTOR
  USER_TECNICO_APOYO
  USER_DOCENTE
  USER_DIRECTOR
}

enum TypePersonEnum {
  FORMADOR
  MENTOR
  TECNICO_APOYO
  DOCENTE
  DIRECTOR
  EMPLEADO
}

enum TypeGender {
  M
  H
}

enum EvaluationEnum {
  APROBADO
  REPROBADO
}

model Person {
  id                Int                      @id @default(autoincrement())
  firstName         String
  lastName1         String
  lastName2         String?
  dui               String                   @unique
  address           String
  gender            TypeGender
  phoneNumber       String
  birthdate         DateTime?                @db.Date
  career            String
  nip               Int?
  typePersonId      Int
  districtId        Int
  cohortId          Int                      @default(1)
  createdAt         DateTime                 @default(now())
  updatedAt         DateTime                 @updatedAt
  deletedAt         DateTime?
  createdBy         Int                      @default(0)
  updatedBy         Int?
  deletedBy         Int?
  TypePerson        TypePerson               @relation(fields: [typePersonId], references: [id])
  District          District                 @relation(fields: [districtId], references: [id])
  Cohort            Cohort                   @relation(fields: [cohortId], references: [id])
  PrincipalSchool   PrincipalSchool[]
  EventInstances    EventInstance[]
  EventAttendance   EventAttendance[]
  WorkAttendance    WorkAttendance[]
  AttendanceSession AttendanceSession[]
  AssignedRoles     TechSupportAssignments[] @relation("AssignedRoleToAssignments")
  TechSupportRoles  TechSupportAssignments[] @relation("TechSupportToAssignments")
  User              User?
  inscriptions      Inscription[]
  mentorAssignments MentorAssignment[]
  GroupStaff        GroupStaff[]

  @@index([districtId, deletedAt])
}

model PrincipalSchool {
  id        Int       @id @default(autoincrement())
  personId  Int
  schoolId  Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  updatedBy Int?
  deletedBy Int?
  Person    Person    @relation(fields: [personId], references: [id])
  School    School    @relation(fields: [schoolId], references: [id])
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  passwd        String
  avatar        String?
  isVerified    Boolean   @default(false)
  lastLoginDate DateTime?
  roleId        Int
  personId      Int       @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?
  updatedBy     Int?
  deletedBy     Int?
  Person        Person    @relation(fields: [personId], references: [id])
  Role          Role      @relation(fields: [roleId], references: [id])
  UserKey       UserKey[]
}

model UserKey {
  id         Int       @id @default(autoincrement())
  userId     Int
  publicKey  String
  privateKey String
  createdAt  DateTime  @default(now())
  revokedAt  DateTime?
  isActive   Boolean   @default(true)
  user       User      @relation(fields: [userId], references: [id])
}

model EvaluationInstrument {
  id                         Int                          @id @default(autoincrement())
  name                       String                       @unique
  periodicity                String
  percentage                 Float
  code                       String                       @unique
  ModuleEvaluation           ModuleEvaluation[]
  TrainingEvaluation         TrainingEvaluation[]
  EvaluationInstrumentDetail EvaluationInstrumentDetail[]
  Grade                      Grade[]
}

model EvaluationInstrumentDetail {
  id                     Int                  @id @default(autoincrement())
  description            String
  evaluationInstrumentId Int
  percentage             Float
  moduleNumber           Int? // Apply if it is per module, null if it is at the end
  EvaluationInstrument   EvaluationInstrument @relation(fields: [evaluationInstrumentId], references: [id])
  Grade                  Grade[]
}

model ModuleEvaluation {
  id                     Int                  @id @default(autoincrement())
  grade                  Float
  evaluationInstrumentId Int
  inscriptionId          Int
  trainingModuleId       Int
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
  deletedAt              DateTime?
  createdBy              Int
  updatedBy              Int?
  deletedBy              Int?
  EvaluationInstrument   EvaluationInstrument @relation(fields: [evaluationInstrumentId], references: [id])
  Inscription            Inscription          @relation(fields: [inscriptionId], references: [id])
  TrainingModule         TrainingModule       @relation(fields: [trainingModuleId], references: [id])
}

model ModuleReport {
  id                   Int            @id @default(autoincrement())
  moduleScore          Float
  status               EvaluationEnum
  attendancePercentage Float
  trainingModuleId     Int
  inscriptionId        Int
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  deletedAt            DateTime?
  createdBy            Int?
  updatedBy            Int?
  deletedBy            Int?
  Inscription          Inscription    @relation(fields: [inscriptionId], references: [id])
  TrainingModule       TrainingModule @relation(fields: [trainingModuleId], references: [id])

  @@unique([trainingModuleId, inscriptionId])
}

model TrainingEvaluation {
  id                     Int                  @id @default(autoincrement())
  grade                  Float
  evaluationInstrumentId Int
  inscriptionId          Int
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
  deletedAt              DateTime?
  createdBy              Int?
  updatedBy              Int?
  deletedBy              Int?
  EvaluationInstrument   EvaluationInstrument @relation(fields: [evaluationInstrumentId], references: [id])
  Inscription            Inscription          @relation(fields: [inscriptionId], references: [id])
}

model TrainingReport {
  id                   Int         @id @default(autoincrement())
  finalScore           Float
  attendancePercentage Float
  status               String
  inscriptionId        Int
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  deletedAt            DateTime?
  createdBy            Int
  updatedBy            Int?
  deletedBy            Int?
  Inscription          Inscription @relation(fields: [inscriptionId], references: [id])
}

model Appendix {
  id          Int          @id @default(autoincrement())
  title       String
  subTitle    String
  description String
  periodicity String
  iconName    String
  color       String
  total       Int?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  deletedAt   DateTime?
  createdBy   Int
  updatedBy   Int?
  deletedBy   Int?
  Section     Section[]
  SurveyData  SurveyData[]
}

model Section {
  id         Int        @id @default(autoincrement())
  title      String
  summary    String
  orderBy    Int
  appendixId Int
  createdAt  DateTime   @default(now())
  updatedAt  DateTime
  deletedAt  DateTime?
  createdBy  Int?
  updatedBy  Int?
  deletedBy  Int?
  Question   Question[]
  Appendix   Appendix   @relation(fields: [appendixId], references: [id])
}

model Question {
  id           Int       @id @default(autoincrement())
  text         String
  questionType String
  orderBy      Int
  subSection   String
  isRequired   Boolean
  sectionId    Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  deletedAt    DateTime?
  createdBy    Int
  updatedBy    Int?
  deletedBy    Int?
  fieldName    String
  options      Json?
  Section      Section   @relation(fields: [sectionId], references: [id])
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.

model Grade {
  id                           Int                         @id @default(autoincrement())
  email                        String?                     @db.VarChar(250)
  evaluationInstrumentId       Int
  evaluationInstrumentDetailId Int?
  score                        Float
  created_at                   DateTime?                   @default(now()) @db.Timestamp(6)
  numero_evaluacion            Int?
  EvaluationInstrumentDetail   EvaluationInstrumentDetail? @relation(fields: [evaluationInstrumentDetailId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  EvaluationInstrument         EvaluationInstrument        @relation(fields: [evaluationInstrumentId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([email, evaluationInstrumentId, evaluationInstrumentDetailId, numero_evaluacion], map: "unique_grade_per_student_per_module")
}

model uploads {
  id        Int       @id @default(autoincrement())
  filename  String    @db.VarChar(255)
  mapping   Json
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  createdBy String    @db.VarChar(250)
  status    String?   @default("PENDING") @db.VarChar(50)
  error     String?
  s3uri     String?   @db.VarChar
}

/**
 * ================================
 * | SURVEY DATA |
 * ================================
 */
model SurveyData {
  id            Int         @id @default(autoincrement())
  appendixId    Int
  Appendix      Appendix    @relation(fields: [appendixId], references: [id])
  survey        Json
  inscriptionId Int
  Inscription   Inscription @relation(fields: [inscriptionId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  deletedAt     DateTime?
  createdBy     Int
  updatedBy     Int?
  deletedBy     Int?
}

// ====== END - SURVEY DATA ======
